<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../Styles/SignalerBug.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.f4.logicielf4.Controllers.Admin.SignalerBugController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Signaler un bug / commentaires" styleClass="title-label" />
            <Line startX="0.0" endX="560.0" strokeWidth="1.5" styleClass="line" />

            <TextArea fx:id="bugTextField" promptText="Décrivez le problème ici..." prefHeight="200.0" styleClass="text-area" />
            <Button fx:id="sendButton" text="Envoyer" maxWidth="150.0" alignment="CENTER" styleClass="button" />
            <ProgressIndicator fx:id="progressIndicator" visible="false" maxWidth="50" maxHeight="50" styleClass="progress-indicator" />
        </VBox>
    </children>
</AnchorPane>
